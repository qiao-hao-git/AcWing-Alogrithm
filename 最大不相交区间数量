#include<iostream>
#include<vector>
#include<algorithm>

using namespace std;

static bool cmp(const vector<int>& a, const vector<int>& b) {
    return a[1] < b[1];
}

int main() {
    int n;
    scanf("%d", &n);
    vector<vector<int>> nums;
    for(int i = 0; i < n; i++) {
        int l, r;
        scanf("%d%d", &l, &r);
        nums.push_back({l, r});
    }
    sort(nums.begin(), nums.end(), cmp);
    int st = nums[0][0], ed = nums[0][1];
    vector<vector<int>> res;
    for(int i = 1; i < n; i++) {
        if(ed < nums[i][0]) {
            res.push_back({st, ed});
            st = nums[i][0];
            ed = nums[i][1];
        } else {
            ed = min(nums[i][1], ed);
        }
    }
    res.push_back({st, ed});
    printf("%d\n", res.size());
    return 0;
}
