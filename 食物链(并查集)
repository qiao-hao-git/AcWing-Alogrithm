#include <iostream>

using namespace std;

const int N = 50010;
int f[N], d[N];
int n, k;

int find(int x)
{
    if(x != f[x])
    {
        int t = find(f[x]);
        d[x] += d[f[x]];
        f[x] = t;
    }
    return f[x];
}

int main()
{
    cin >> n >> k;
    for(int i = 1; i <= n; i ++) f[i] = i;
    int res = 0;
    while(k --)
    {
        int k, x, y;
        cin >> k >> x >> y;
        if(x > n || y > n) res ++;
        else
        {
            int fx = find(x), fy = find(y);
            if(k == 1)
            {
                if(fx == fy && (d[x] - d[y]) % 3) res ++;
                else if(fx != fy)
                {
                    f[fx] = fy;
                    d[fx] = d[y] - d[x];
                }
            }
            else
            {
                if(fx == fy && (d[x] - d[y] - 1) % 3) res ++;
                else if(fx != fy)
                {
                    f[fx] = fy;
                    d[fx] = d[y] - d[x] + 1;
                }
            }
        }
    }
    cout << res << endl;
    return 0;
}
