#include <iostream>

using namespace std;
const int N = 1e5 + 10;
int f[N], n, m, cnt[N];
string c;

int find(int x)
{
    if(x == f[x]) return x;
    else return f[x] = find(f[x]);
}

int main()
{
    cin >> n >> m;
    for(int i = 1; i <= n; i ++)
    {
        f[i] = i;
        cnt[i] = 1;
    }
    while(m --)
    {
        int a, b;
        cin >> c;
        if(c == "C")
        {
            cin >> a >> b;
            a = find(a), b = find(b);
            if(a != b)
            {
                f[a] = b;
                cnt[b] += cnt[a];
            }
        }
        else if(c == "Q1")
        {
            cin >> a >> b;
            if(find(a) == find(b)) puts("Yes");
            else puts("No");
        }
        else
        {
            cin >> a;
            cout << cnt[find(a)] << endl;
        }
    }
    return 0;
}
